<tr>
	<td><%= product.manufacturer %></td>
	<td><%= product.model_number %></td>
	<td><%= product.description %></td>
	<td><%= product.price %></td>
	<% if current_retailer?(product.retailer) %>
		<td><a href="javascript:void(0);" onclick="OpenEdit('<%= edit_product_path(product)=%>')">Edit</a></td>
		<td>		
	 		<%= link_to "delete", product, method: :delete, data: {confirm: "You sure?" }, title: product.model_number %>
		</td>
	<% else %>
		<td><%= link_to product.retailer.contact, product.retailer, method: :get, title: product.retailer.name %></td>
	<% end %>
</tr>
  